{
  "name": "YouTube 自动回复 Beta 1",
  "version": "1.0.9",
  "author": "Raz1ner",
  "manifest_version": 3,
  "description": "YouTube 自动回复",
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["inject.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://*.youtube.com/*"]
  },
  "web_accessible_resources": [{
    "resources": ["myScript.js"],
    "matches": ["*://*.youtube.com/*"]
  }],
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*", "https://script.google.com/macros/*"]
}